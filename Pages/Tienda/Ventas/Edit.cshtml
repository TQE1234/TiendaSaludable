@page
@model WebApplication2.Pages.Tienda.Ventas.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Venta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Venta.VentaId" />
            <div class="form-group">
                <label asp-for="Venta.FechaVenta" class="control-label"></label>
                <input asp-for="Venta.FechaVenta" class="form-control" />
                <span asp-validation-for="Venta.FechaVenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Venta.Cantidad" class="control-label"></label>
                <input asp-for="Venta.Cantidad" class="form-control" />
                <span asp-validation-for="Venta.Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Venta.ClienteId" class="control-label"></label>
                <select asp-for="Venta.ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
                <span asp-validation-for="Venta.ClienteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
